{
    "compilerOptions": {
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowJs": true,
        "outDir": "dist/"
    },
    "typeAcquisition": {
        "include": [
            "jest"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts"
    ]
}